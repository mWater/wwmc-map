<div class="panel panel-default map-legend">
    <div class="panel-heading">
        <h3 class="panel-title">
            Filter by water action
        </h3>
    </div>
    <div class="panel-body">
        <div class="form-group">
            <label for="action_selector">Action Type</label>
            <select id="selector" class="form-control">
                <option value="all">All Actions</option>
                <option value="flushing">Flushing</option>
                <option value="TKdfEkd">Beach/river cleanup</option>
                {{!-- <option value="lSTK7fU">Education</option> Not in use --}}
                <option value="ASR2hr3">Storm Drain Activity</option>
                <option value="NzRwvgQ">Tree planting</option>
                <option value="f1PswKP">Habitat Restoration</option>
                <option value="B5pN6Yc">Other (please specify)</option>
            </select>
        </div>
        <div class="form-group">
            <label for="year_selector">Year</label>
            <select id="year_selector" class="form-control">
                <option value="">All Years</option>
                {{#each years}}
                <option value="{{this}}">{{this}}</option>
                {{/each}}
            </select>
        </div>
    </div>
</div>