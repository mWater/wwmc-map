<div style="height:280px;overflow: auto;">
    <br>
    {{#if hasNoData}}
        No data
    {{else}}
    <table id="historyTable" class="table table-bordered">
        <thead>
        <tr>
            <th>Date</th>
            <th>Turbidity</th>
            <th>pH</th>
            <th>Temperature</th>
            <th>Oxygen</th>
            <th>Oxygen Saturation</th>
            {{#if hasNitrite}}
            <th>Nitrite</th>
            {{/if}}
            {{#if hasNitrate}}
            <th>Nitrate</th>
            {{/if}}
            {{#if hasPhosphate}}
            <th>Phosphate</th>
            {{/if}}
        </tr>
        </thead>
        <tbody>
        {{#each data}}
            <tr>
                <th scope="row">{{date}}</th>
                <td>{{turbidity}}</td>
                <td>{{ph}}</td>
                <td>{{waterTemperature}}</td>
                <td>{{dissolvedOxygen}}</td>
                <td>{{dissolvedOxygenSaturation}}</td>
                {{#if hasNitrite}}
                <td>{{nitrite}}</td>
                {{/if}}
                {{#if hasNitrate}}
                <td>{{nitrate}}</td>
                {{/if}}
                {{#if hasPhosphate}}
                <td>{{phosphate}}</td>
                {{/if}}
            </tr>
        {{/each}}
        </tbody>
    </table>
    {{/if}}
</div>