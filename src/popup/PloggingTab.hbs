<div style="height:280px;overflow: auto;">
    <br>
    {{#if hasNoData}}
        No data
    {{else}}
    <table id="ploggingHistoryTable" class="table table-bordered">
        <thead>
        <tr>
            <th>Date</th>
            <th>Distance</th>
            <th>Participants</th>
            <th>Duration</th>
            <th>Pieces Collected</th>
            <th>Bags Used</th>
            <th>Total weight</th>
        </tr>
        </thead>
        <tbody>
        {{#each data}}
            <tr>
                <th scope="row">{{date}}</th>
                <td>{{distance}}</td>
                <td>{{participants}}</td>
                <td>{{duration}}</td>
                <td>{{pieces_collected}}</td>
                <td>{{bags_used}}</td>
                <td>{{total_weight}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>
    {{/if}}
</div>